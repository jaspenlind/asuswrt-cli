{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "*": ["../node_modules/*", "types/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
