{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "*": ["src/types/*", "*"]
    },
  },
  "files": ["src/types/global.d.ts"],
  "include": ["src/**/*", "test/**/*"]
}
